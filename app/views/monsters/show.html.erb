<div class="row">
	<div class="small-10 small-offset-1 columns">		
		<h1><%= @monster.name %></h1>
		<h2><%= @monster.size %></h2>
		<h3><%= @monster.nature %></h3>
		<% unless @monster.monster_tags.empty? %>
			<h4>(<%= @monster.monster_tags.map{|m| m.tag}.join(", ") %>)</h4>
		<% end %>
	</div>
</div>