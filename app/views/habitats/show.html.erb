<div class="row">
	<div class="small-10 small-offset-1 columns">
		<h1><%= @habitat.name %></h1>
		<h3>Monsters:</h3>
	</div>
</div>
<div class="row">
	<% @habitat.monsters.each do |monster| %>
		<div class="small-5 small-offset-1 columns">
			<h6>
				<%= monster.name %> (<%= monster.xp %> XP)
			</h6>
		</div>
	<% end %>
</div>
<div class="row">
	<div class="small-0 small-offset-1 columns">
		<%= link_to 'Destroy', habitat_path(@habitat), :method => :delete, :data => {:confirm => 'Are you sure you want to delete this?'}, :class => "button tiny alert" %>
	</div>
</div>