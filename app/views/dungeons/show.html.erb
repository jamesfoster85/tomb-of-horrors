<div class="row">
	<div class="small-10 small-offset-1 columns">
		<% @dungeon.rooms.each do |room| %>
			<h5><%= room.description.inspect %></h5>
		<% end %>
		<%= link_to 'Add a new room...', new_dungeon_room_path(@dungeon), :class => 'button tiny' %>
		<%= link_to 'Destroy', dungeon_path(@dungeon), :method => :delete, :data => {:confirm => 'Are you sure you want to delete this?'}, :class => "button tiny alert" %>
	</div>
</div>